                  case "понедельник":
          Console.WriteLine("Понедельник. Спешим на учёбу! Ур-р-р-А!");
          return true;
                     case "среда":
                     Console.WriteLine("По средам мы ходим в баню. Ай-да!");
                     return true;
                     default:
                     Console.WriteLine("Сегодня не твой день. Гуд бай!");
                     return true;
